<div class="goals">

  <div class="progress">
    <div class="logo"> <h2> <%= image_tag("favicon.png") %> Spotter </h2> </div>
    <div class="percent"> <p>37%</p> </div>
  </div>

  <h1>Jouw Doel(en)</h1>
  <h3>Kies maximaal 2 doelen</h3>

  <label class="container"> 
    <h2>Afvallen</h2>
    <h3>Ik wil kilo's kwijt!</h3>
    <input type="checkbox">
    <span class="checkmark"></span>
  </label>

  <label class="container"> 
    <h2>Sterker worden</h2>
    <h3>Ik wil kracht opbouwen!</h3>
    <input type="checkbox">
    <span class="checkmark"></span>
  </label>

  <label class="container"> 
    <h2>Spier opbouwen</h2>
    <h3>Ik wil meer spieren!</h3>
    <input type="checkbox">
    <span class="checkmark"></span>
  </label>

  <div class="submit">
    <%= link_to '<button type="button" class="button-primary">Volgende stap</button>'.html_safe, registrations_level_path %> <br> 

    <%= link_to 'Overslaan', registrations_level_path %>
  </div>

</div>
